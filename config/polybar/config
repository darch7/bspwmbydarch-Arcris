

; Configuracion personal de polybar con scripts personalizados
; en .local/bin (la mayoria de las cosas que aparecen en la 
; barra son scripts individuales).

[colors]
background = ${xrdb:background}
background-alt = ${xrdb:background}
foreground = ${xrdb:foreground}
foreground-alt = ${xrdb:foreground}
primary = ${xrdb:color2}
secondary = ${xrdb:color7}
alert = ${xrdb:color9}
color1 = ${xrdb:color1}
color2 = ${xrdb:color2}
color3 = ${xrdb:color3}
color4 = ${xrdb:color4}
color5 = ${xrdb:color5}
color6 = ${xrdb:color6}
color7 = ${xrdb:color7}
color8 = ${xrdb:color8}
color9 = ${xrdb:color9}
color10 = ${xrdb:color10}
color11 = ${xrdb:color11}
color12 = ${xrdb:color12}
color13 = ${xrdb:color13}
color14 = ${xrdb:color14} 
color15 = ${xrdb:color15}
color256 = ${xrdb:color256}
color257 = ${xrdb:color257}

[bar/bar]
;monitor = ${env:MONITOR:HDMI-A-2}
width = 97.7%
height = 3%
offset-x = 1%
offset-y = 0.8%
radius = 0
fixed-center = true
font-0 = fixed:pixelsize=11.2;1
font-1 = "Font Awesome 5 Free:style=Solid:size=11"
font-2 = "Font Awesome:style=Solid:size=11"
font-3 = "Source Han Sans JP:Bold:size=12"
font-4 = "JoyPixels:style=Regular:size=9"
;font-5 = "Hack Nerd Font Mono:style=Regular:size=9"
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 3
line-color = #f00
border-size = 0
border-color = #0000000
padding-left = 2
padding-right = 2
module-margin-left = 1
module-margin-right = 1
enable-ipc = true
modules-left =bspwm logotitulo xwindow
;modules-center =
modules-right =pacman-updates ram cpu temperature xbacklight pulseaudio fecha slash hora battery wifi usuario 

wm-restack = bspwm
cursor-click = pointer
cursor-scroll = ns-resize

[module/xwindow]
type = internal/xwindow
label = %title:0:18:...%
label-foreground = ${colors.color2}
format-foreground = ${colors.color2}

[module/bspwm]
type = internal/bspwm
label-focused = %name%
label-focused-foreground = ${colors.color10}
label-focused-underline= ${colors.color10}
label-focused-padding = 1
label-occupied = %name%
label-occupied-foreground = ${colors.color2}
label-occupied-padding = 1
label-urgent = %name%
label-urgent-foreground = ${colors.color1}
label-urgent-padding = 1
label-empty = %name%
label-empty-foreground = ${colors.color0}
label-empty-padding = 1
label-focused-background = ${colors.background}
label-focused-underline-background = ${colors.background}
label-occupied-background = ${colors.background}
label-urgent-background = ${colors.background}
label-empty-background = ${colors.background}

[module/xbacklight]
type = internal/xbacklight
format =|   <label> <%percentage%%>
label = %percentage%%
label-foreground = ${colors.color7}
format-foreground = ${colors.color7}

[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = intel_backlight

[module/pulseaudio]
type = internal/pulseaudio
format-volume = "|   <label-volume>"
format-muted = "|   <label-muted>"
label-volume = %percentage%%
label-muted = %percentage%%
label-volume-foreground = ${colors.color4}
label-muted-foreground = ${colors.color1}
format-volume-foreground = ${colors.color4}
format-muted-foreground = ${colors.color1}

[module/battery]
type = internal/battery
full-at = 100
battery = BAT0
adapter = ADP1
poll-interval = 5
time-format = %H:%M

format-charging = <animation-charging> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>

label-charging = %percentage%%
label-charging-foreground = ${colors.color13}
label-discharging = %percentage%%
label-discharging-foreground = ${colors.color13}

label-full =| 

ramp-capacity-0 =| 
ramp-capacity-1 =| 
ramp-capacity-2 =| 
ramp-capacity-3 =| 
ramp-capacity-4 =| 
ramp-capacity-foreground = ${colors.color13}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-framerate = 600
animation-charging-foreground = ${colors.color13}

animation-discharging-0=| 
animation-discharging-1=| 
animation-discharging-2=| 
animation-discharging-3=| 
animation-discharging-4=| 
animation-discharging-framerate = 500
animation-discharging-foreground = ${colors.color13}

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60
format =<ramp> <label> 
format-warn = <ramp> <label-warn>
label =%temperature%
label-warn = %temperature%
ramp-0 =|  
ramp-1 =|  
ramp-2 =|  
label-foreground = ${colors.color257}
format-foreground = ${colors.color257}
format-warn-foreground = ${colors.color257}
[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false

[global/wm]
margin-top = 5
margin-bottom = 0

[module/network-trafico]
type = custom/script
exec = ~/.local/bin/modulos/bar_network_trafico
format = "| <label> |"
click-left = st -e nmtui
label = %output% 
label-padding = 0
tail = true
label-foreground = ${colors.color11}
format-foreground = ${colors.color11}
format-background = ${colors.background}

[module/wifi]
type = custom/script
exec = bar_wifi 2>/dev/null
format = "|<label>"
;format = "|  <label>"
click-left = st -e nmtui
label = %output% 
label-padding = 0
tail = true
interval = 20
label-foreground = ${colors.color11}
format-foreground = ${colors.color11}

[module/ram]
type = custom/script
exec = bar_ram 2>/dev/null
format = "|   <label>"
click-left = st -e htop
label = %output%
label-padding = 0
tail = true
interval = 10
label-foreground = ${colors.color3}
format-foreground = ${colors.color3}

[module/cpu]
type = custom/script
exec = bar_cpu 2>/dev/null
format = "|   <label>"
click-left = st -e htop
label = %output%
label-padding = 0
tail = true
interval = 10
label-foreground = ${colors.color256}
format-foreground = ${colors.color256}

[module/fecha]
type = custom/script
exec = bar_fecha 2>/dev/null
format ="|   <label>"
label = %output%
label-padding = 0
interval = 5
tail = true
label-foreground = ${colors.color2}
format-foreground = ${colors.color2}
click-left = setsid -f st -e calcurse

[module/hora]
type = custom/script
exec = bar_hora 2>/dev/null
format = " <label>"
label = %output%
label-padding = 0
interval = 5
tail = true
label-foreground = ${colors.color2}
format-foreground = ${colors.color2}
click-left = setsid -f st -e calcurse

[module/usuario]
type = custom/script
exec = bar_usuario 2>/dev/null
format = " <label>"
label = %output%
label-padding= 0
label-foreground = ${colors.color14}
format-foreground = ${colors.color14}

[module/pacman-updates]
type = custom/script
exec = checkupdates | wc -l | awk -v o='%{F#7fff00}' -v r='%{F#FF0000}' -v q='%{F-}' '{if ($0 > 0) print r" "q " : " $0; else print o""q " : " $0}' 
click-left = exec st -e sudo pacman -Syu
interval = 300
label = %output%
format-background = ${colors.background}

; Separadores --------------------------------------------------------------

[module/slash]
type = custom/text
content ="/"
label-padding= 0
content-foreground = ${colors.color2}


[module/logotitulo]
type = custom/text
content =""
label-padding= 0
content-foreground = ${colors.color6}
content-background = ${colors.background}

